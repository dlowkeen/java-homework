package app;

//import java.util.ArrayList;

//(3 points) Create a class called ArrayPair that implements the PairInterface interface. 
//This class should use an array of size 2 to represent the two objects of the pair. 
//Create a test driver application that
//demonstrates that the ArrayPair class works correctly.

public class ArrayPair<T> implements PairInterface<T> {
	
	private T[] arr;
//	private T[] someArray = 
//	private ArrayList<T> myStringArray = new ArrayList<T>();
	
	public ArrayPair(T[] arr) {
		this.arr = arr;
	}

	@Override
	public T getFirst() {
		return this.arr[0];
	}

	@Override
	public T getSecond() {
		return this.arr[1];
	}

	@Override
	public void setFirst(T first) {
		this.arr[0] = first;
	}

	@Override
	public void setSecond(T second) {
		this.arr[1] = second;
	}

}
