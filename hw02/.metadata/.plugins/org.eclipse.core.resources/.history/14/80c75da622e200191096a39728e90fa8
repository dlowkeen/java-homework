package apps;

import java.util.Scanner;

import stack.LinkedListStack;
import stack.StackInterface;
import stack.StackOverflowException;

public class PostfixOperationApplication {
	public static void main(String[] args) throws StackOverflowException {
		String expression = "5 7 + 6 2 - *";
		
		Scanner in = new Scanner(expression);
		StackInterface<Integer> operands = new LinkedListStack<Integer>();
		while(in.hasNext()) {
			System.out.println("Hello World");
			if (in.hasNextInt()) {
				// if its an operand
				System.out.println(in.nextInt());
				operands.push(in.nextInt());
			} else {
				
				// if its an operation
				Integer operand1 = null;
				Integer operand2 = null;
				try {
					operand2 = operands.top();					
				} catch(StackOverflowException e) {
					System.out.println("Not enough operands" + e);
				}
				operands.pop();
				try {
					operand1 = operands.top();					
				} catch(StackOverflowException e) {
					System.out.println("Not enough operands" + e);
				}
				Integer result = null;
				String operation = in.next();
				if (operation == "+") {
					result = operand1 + operand2;
				} else if (operation == "-") {
					result = operand1 - operand2;
				} else if (operation == "/") {
					result = operand1 / operand2;
				} else if (operation == "*") {
					result = operand1 * operand2;
				}
				System.out.println(result);
				operands.push(result);
				
			}
		}
	}
}
